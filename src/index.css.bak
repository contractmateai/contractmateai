@tailwind base;
@tailwind components;
@tailwind utilities;

@import url('https://fonts.googleapis.com/css2?family=Shoika&family=Inter:wght@400;500;600&display=swap');

body {
  @apply bg-[#01040b] text-[#fff9f9] font-inter overflow-x-hidden;
}

/* Glint line */
.animate-glint {
  @apply absolute top-0 -left-36 w-36 h-1 bg-gradient-to-r from-transparent via-[#bff611]/90 to-transparent;
  animation: glint-sweep 4s linear infinite, glint-fade 4s linear infinite;
  box-shadow: 0 0 22px rgba(191,246,17,.6);
}
@keyframes glint-sweep { from { left: -140px; } to { left: 120%; } }
@keyframes glint-fade { 0%,100% { opacity: 0; } 8%,78% { opacity: 1; } }

/* Marquees */
@keyframes marquee { from { transform: translateX(0); } to { transform: translateX(-50%); } }
.animate-marquee { animation: marquee 120s linear infinite; }
.animate-marquee-reverse { animation: marquee 120s linear infinite reverse; }

/* Moving yellow line */
@keyframes move-around {
  0% { top: -20px; left: -20px; }
  25% { top: -20px; left: calc(100% - 20px); }
  50% { top: calc(100% - 20px); left: calc(100% - 20px); }
  75% { top: calc(100% - 20px); left: -20px; }
  100% { top: -20px; left: -20px; }
}
.yellow-line {
  @apply absolute w-8 h-8 bg-[#bff611]/80 rounded-full;
  animation: move-around 8s linear infinite;
  box-shadow: 0 0 40px 30px rgba(191,246,17,.8);
}

/* Particles */
.particle {
  @apply absolute w-1 h-1 bg-[#682fd8] rounded-full;
  box-shadow: 0 0 6px #682fd8;
  animation: floatUp linear infinite;
}
@keyframes floatUp {
  from { transform: translateY(0); opacity: 1; }
  to { transform: translateY(-1600px); opacity: 0; }
}